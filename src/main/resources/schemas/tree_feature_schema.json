{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Minecraft Tree Feature Configuration",
    "description": "Schema for minecraft:tree configured feature",
    "type": "object",
    "properties": {
        "ignore_vines": {
            "type": "boolean",
            "default": false,
            "description": "Allow tree generation even when vines block foliage placement"
        },
        "force_dirt": {
            "type": "boolean",
            "default": false,
            "description": "Force placement of dirt_provider block beneath trunk"
        },
        "dirt_provider": {
            "type": "object",
            "description": "Block state provider for dirt beneath the tree",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "minecraft:simple_state_provider",
                        "minecraft:weighted_state_provider"
                    ],
                    "default": "minecraft:simple_state_provider"
                },
                "state": {
                    "type": "object",
                    "description": "Block state (for simple_state_provider)",
                    "properties": {
                        "Name": {
                            "type": "string"
                        },
                        "Properties": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "trunk_provider": {
            "type": "object",
            "required": true,
            "description": "Block state provider for trunk blocks",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "minecraft:simple_state_provider",
                        "minecraft:weighted_state_provider"
                    ],
                    "default": "minecraft:simple_state_provider"
                },
                "state": {
                    "type": "object",
                    "required": true,
                    "properties": {
                        "Name": {
                            "type": "string"
                        },
                        "Properties": {
                            "type": "object",
                            "properties": {
                                "axis": {
                                    "type": "string",
                                    "enum": [
                                        "x",
                                        "y",
                                        "z"
                                    ],
                                    "default": "y"
                                }
                            }
                        }
                    }
                }
            }
        },
        "foliage_provider": {
            "type": "object",
            "required": true,
            "description": "Block state provider for foliage blocks",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "minecraft:simple_state_provider",
                        "minecraft:weighted_state_provider"
                    ],
                    "default": "minecraft:simple_state_provider"
                },
                "state": {
                    "type": "object",
                    "required": true,
                    "properties": {
                        "Name": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "minimum_size": {
            "type": "object",
            "required": true,
            "description": "Minimum size configuration for the tree",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "minecraft:two_layers_feature_size",
                        "minecraft:three_layers_feature_size"
                    ],
                    "default": "minecraft:two_layers_feature_size"
                },
                "limit": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 1
                },
                "lower_size": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 0
                },
                "upper_size": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 1
                }
            }
        },
        "trunk_placer": {
            "type": "object",
            "required": true,
            "description": "Trunk placement configuration",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "minecraft:straight_trunk_placer",
                        "minecraft:forking_trunk_placer",
                        "minecraft:giant_trunk_placer",
                        "minecraft:mega_jungle_trunk_placer",
                        "minecraft:dark_oak_trunk_placer",
                        "minecraft:fancy_trunk_placer",
                        "minecraft:bending_trunk_placer",
                        "minecraft:upwards_branching_trunk_placer",
                        "minecraft:cherry_trunk_placer"
                    ],
                    "default": "minecraft:straight_trunk_placer"
                },
                "base_height": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 4,
                    "description": "Base trunk height"
                },
                "height_rand_a": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 2,
                    "description": "First random height modifier"
                },
                "height_rand_b": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 0,
                    "description": "Second random height modifier"
                }
            }
        },
        "foliage_placer": {
            "type": "object",
            "required": true,
            "description": "Foliage placement configuration",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "minecraft:blob_foliage_placer",
                        "minecraft:spruce_foliage_placer",
                        "minecraft:pine_foliage_placer",
                        "minecraft:acacia_foliage_placer",
                        "minecraft:bush_foliage_placer",
                        "minecraft:fancy_foliage_placer",
                        "minecraft:jungle_foliage_placer",
                        "minecraft:mega_pine_foliage_placer",
                        "minecraft:dark_oak_foliage_placer",
                        "minecraft:random_spread_foliage_placer",
                        "minecraft:cherry_foliage_placer"
                    ],
                    "default": "minecraft:blob_foliage_placer"
                },
                "radius": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 2,
                    "description": "Foliage radius"
                },
                "offset": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 0,
                    "description": "Vertical offset from trunk top"
                },
                "height": {
                    "type": "integer",
                    "minimum": 0,
                    "default": 3,
                    "description": "Foliage height"
                }
            }
        },
        "decorators": {
            "type": "array",
            "default": [],
            "description": "Tree decorators (vines, beehives, etc.)",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "minecraft:trunk_vine",
                            "minecraft:leave_vine",
                            "minecraft:cocoa",
                            "minecraft:beehive",
                            "minecraft:alter_ground"
                        ]
                    },
                    "probability": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1,
                        "default": 0.25
                    }
                }
            }
        },
        "root_placer": {
            "type": "object",
            "description": "Optional root placement configuration",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "minecraft:mangrove_root_placer"
                    ],
                    "default": "minecraft:mangrove_root_placer"
                },
                "root_provider": {
                    "type": "object",
                    "description": "Block state provider for roots"
                },
                "trunk_offset_y": {
                    "type": "integer",
                    "default": 0
                },
                "above_root_placement": {
                    "type": "object"
                }
            }
        }
    },
    "required": [
        "trunk_provider",
        "foliage_provider",
        "trunk_placer",
        "foliage_placer",
        "decorators"
    ]
}